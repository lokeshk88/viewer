<div class="container">
    <p style="color: green"><%= notice %></p>
    <h1>Tasks</h1>
     <div class="card" align="left">
     <%= link_to "New task", new_user_role_team_task_path,class:"btn btn-primary"%>
     </div>

    <table class="table table-bordered">
      <thead>
        <tr class="table-primary">
        <th scope="col"> <strong>Name</strong></th>
        <th scope="col"> <strong>Description</strong></th>
        <th scope="col"><strong>Function</strong></th>
        <tr>
      </thead>
      <% @team.tasks.each do |task| %>
      <tbody>
        <th scope="row">
        <td>
          <%=task.name%>
        </td>
        <td>
          <%= task.description%>
        </td>
        <td>
          <%= link_to "Show task",user_role_team_task_url(task.team.role.user, task.team.role, task.team, task),class:"btn btn-success" %>
        </td>
        </th>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

